-- First part with LEFT JOIN instead of Oracle (+)
SELECT 
    j.id,
    j.libelle,
    COUNT(*) AS nombre
FROM SPC_OPE_MATCH m
JOIN SPC_ECART e ON m.ECART_ID = e.ID
LEFT JOIN SPC_JUSTIFICATIF j ON e.JUSTIFICATIF = j.ID
WHERE m.LOT_ID = '3764'
GROUP BY j.id, j.libelle

UNION ALL

-- Second part (no change except proper aliases)
SELECT 
    0 AS id,
    '[Non justifi√©]' AS libelle,
    COUNT(*) AS nombre
FROM SPC_OPE_MATCH m
WHERE m.LOT_ID = '3764'
  AND m.ECART_ID = 0
  AND m.STATUT = 'P'
  AND m.TYPE_MATCH = 'OSMP'
GROUP BY id, libelle;
